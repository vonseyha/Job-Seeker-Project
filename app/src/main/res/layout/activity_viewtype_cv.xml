<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_viewtype_cv"
    android:background="#f5f5f0">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/background_type_of_cv"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:src="@drawable/cva_background" />

            <ImageView
                android:layout_marginTop="150dp"
                android:id="@+id/icon_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="160dp"
                android:src="@drawable/cicrle_logo"
                />
            <ImageView
                android:layout_marginLeft="175dp"
                android:layout_marginTop="160dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/p_image_logo"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_type_of_cv"
            android:layout_width="match_parent"
            android:layout_height="460dp">
        </androidx.recyclerview.widget.RecyclerView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/tab_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff"
            app:menu="@menu/nav_bottom_items">
        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>