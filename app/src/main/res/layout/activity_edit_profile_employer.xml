<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EmployerProfile">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_back_edit_profile_employer"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_back"
            />
        <TextView
            android:id="@+id/btn_correct_edit_postjob"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="EDIT PROFILE"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>


    </LinearLayout>

    <RelativeLayout
        android:background="@drawable/background_profile"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_edit_employer"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="3dp"
            android:layout_gravity="center"
            android:src="@drawable/circle_profileg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="145dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cicrlea"
            android:layout_marginTop="77dp"
            android:layout_marginLeft="225dp"
            />
        <Button
            android:id="@+id/take_photo_edit_profile_employer"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/camara"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="230dp"/>
        <TextView
            android:id="@+id/name_edit_employer_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="niptict"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:layout_below="@+id/profile_image_edit_employer"
            android:textSize="18sp"
            android:textColor="#ffff"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/address_edit_emloyer_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preak Leab,Choy Jongva, Phnom penh"
            android:layout_below="@+id/name_edit_employer_profile"
            android:textAlignment="center"
            android:textColor="#ffff"
            />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginLeft="25dp">

        <EditText
            android:id="@+id/fill_name_edit_emloyer_profile"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/rectanglelogin"
            android:drawableLeft="@drawable/email_icon"
            android:hint="   Full Name"
            android:padding="10dp"
            />
        <EditText
            android:id="@+id/fill_email_edit_emloyer_profile"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:hint="   Email Address"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:background="@drawable/rectanglelogin"
            android:drawableLeft="@drawable/password_icon"
            />


        <EditText
            android:id="@+id/fill_address_edit_emloyer_profile"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:hint="   Address"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:background="@drawable/rectanglelogin"
            android:drawableLeft="@drawable/location"
            />

        <Button
            android:id="@+id/btn_edit_emloyer_profile"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="update"
            android:background="@drawable/btnrectanglelogin"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="70dp"
            />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/tab_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        app:menu="@menu/nav_bottom_items">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</LinearLayout>