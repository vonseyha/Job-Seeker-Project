<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EmployerProfile">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_back_edit_profile_employer"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_back"
            />
        <TextView
            android:id="@+id/btn_correct_edit_postjob"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="EDIT PROFILE"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>


    </LinearLayout>

    <RelativeLayout
        android:background="@drawable/background_profile"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_edit_employer"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="3dp"
            android:layout_gravity="center"
            android:src="@drawable/circle_profileg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="145dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cicrlea"
            android:layout_marginTop="77dp"
            android:layout_marginLeft="225dp"
            />
        <Button
            android:id="@+id/take_photo_edit_profile_employer"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/camara"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="230dp"/>
        <TextView
            android:id="@+id/name_edit_employer_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="niptict"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:layout_below="@+id/profile_image_edit_employer"
            android:textSize="18sp"
            android:textColor="#ffff"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/address_edit_emloyer_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preak Leab,Choy Jongva, Phnom penh"
            android:layout_below="@+id/name_edit_employer_profile"
            android:textAlignment="center"
            android:textColor="#ffff"
            />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="450dp">
        <TextView
            android:id="@+id/acc_info_personal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:text="Account Info"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/relativelyout_personal"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/personal_name"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/p_imageh"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/des_personal"
                android:layout_toRightOf="@+id/personal_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="Name"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_toRightOf="@+id/personal_name"
                android:layout_below="@+id/des_personal"
                android:layout_marginLeft="20dp"
                android:text="Von Seyha "
                android:textSize="13sp"
                android:id="@+id/des_personal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/personal_email"
                android:layout_below="@+id/personal_name"
                android:src="@drawable/p_imagef"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/des_email_personal"
                android:layout_toRightOf="@+id/personal_name"
                android:layout_below="@+id/des_personal_name"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="15dp"
                android:text="Email"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_toRightOf="@+id/personal_name"
                android:layout_below="@+id/des_email_personal"
                android:layout_marginLeft="20dp"
                android:text="seyhavon@gmail.com"
                android:textSize="13sp"
                android:id="@+id/des_com_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/personal_address"
                android:layout_below="@+id/personal_email"
                android:src="@drawable/p_imageg"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/des_add_personal"
                android:layout_toRightOf="@+id/personal_address"
                android:layout_below="@+id/des_email_personal"
                android:layout_marginTop="25sp"
                android:layout_marginLeft="15dp"
                android:text="Address"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_toRightOf="@+id/personal_address"
                android:layout_below="@+id/des_add_personal"
                android:layout_marginLeft="20dp"
                android:text="Comer Street 13 and 102, SangKat PrekLeap, Khan Chroy Chongva, Pnom Phen"
                android:textSize="13sp"
                android:id="@+id/des_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/edit_profile_personal"
                android:layout_below="@+id/personal_address"
                android:src="@drawable/p_imagk"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/des_edit_profile_personal"
                android:layout_toRightOf="@+id/edit_profile_personal"
                android:layout_below="@+id/des_add"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="15dp"
                android:text="Edite Profile"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/logout_personal"
                android:layout_below="@+id/edit_profile_personal"
                android:src="@drawable/iconlogout"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/des_logout"
                android:layout_toRightOf="@+id/logout_personal"
                android:layout_below="@+id/des_edit_profile_personal"
                android:layout_marginTop="25sp"
                android:layout_marginLeft="15dp"
                android:text="Logout"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/tab_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        app:menu="@menu/nav_bottom_items">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</LinearLayout>