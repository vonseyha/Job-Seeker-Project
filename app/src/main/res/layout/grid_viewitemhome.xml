<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".grid_viewitemhome">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_type_of_job"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_post_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/choosed"/>
            <TextView
                android:id="@+id/job_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Delveloper"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:id="@+id/job_term"
                android:layout_below="@+id/job_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Time"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:id="@+id/job_email"
                android:layout_below="@+id/job_term"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="seyhavon22@gmail.com"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:id="@+id/job_phone"
                android:layout_below="@+id/job_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0969840040/1012547863"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="18dp"/>

            <ImageView
                android:id="@+id/btn_job_show_more"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_below="@+id/job_phone"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/rectanglee" />
            <TextView
                android:id="@+id/txt_job_show_more"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_below="@+id/job_phone"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:text="Show More"
                android:textColor="#ffff"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/input_reqs"
                android:layout_below="@+id/btn_job_show_more"
                android:layout_toRightOf="@+id/txt_job_show_more"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="requirement"
                android:textSize="10sp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/input_exps"
                android:layout_below="@+id/btn_job_show_more"
                android:layout_toRightOf="@+id/input_reqs"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="experience"
                android:textSize="10sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/input_last_dates"
                android:layout_below="@+id/btn_job_show_more"
                android:layout_toRightOf="@+id/input_exps"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="lastdate"
                android:textSize="10sp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>